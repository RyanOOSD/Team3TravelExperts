<%- include("includes/header.ejs") %>

    <!-- Bootstrap Hero -->
    <div class="container col-xxl-8 px-4 py-5">
        <div class="row flex-lg-row-reverse align-items-center g-5 py-5">
            <div class="col-10 col-sm-8 col-lg-6">
                <img src="./img/traveller.jpg" class="card card-cover d-block mx-lg-auto img-fluid rounded-4" alt="Travel" width="900" height="700" loading="lazy">
            </div>
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Welcome to Travel Experts!</h1>
                <p class="lead">
                    At Travel Experts, our priority is helping you find your next dream destination and making the booking process as seamless as possible. Whether you're seeking a solo adventure
                    or a group getaway, our world-class travel agents are dedicated to finding you the best deals!
                </p>
                <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a href="./contact" class="btn btn-primary btn-lg px-4 me-md-2">Contact Us</a>
                <a href="./register" class="btn btn-outline-secondary btn-lg px-4">Register</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap Cards -->
    <div class="container px-4 pt-5" id="custom-cards">
        <h2 class="pb-2 border-bottom">Featured Destinations</h2>
        <div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
            <% for (var i = 0; i < package.length; i++) { %>
            <div class="col pb-5">
                <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg">
                    <div class="d-flex flex-column h-100 text-white text-shadow-1 p-4 package-style">
                        <h3 class="display-6 lh-1 fw-bold mb-3"><%= package[i]['PkgName'] %></h3>
                        <p class="fw-bold mb-1"><%= package[i]['PkgDesc'] %></p>
    
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span class="fw-light" style="font-size: 1.2rem;">
                                üóìÔ∏è Travel Dates: <%= package[i]['startMonth'] %>/<%= package[i]['startDay'] %>/<%= package[i]['startYear'] %> -
                                <%= package[i]['endMonth'] %>/<%= package[i]['endDay'] %>/<%= package[i]['endYear'] %>
                            </span>
                        </div>
    
                        <div class="mt-3">
                            <span class="badge bg-success fs-5">$<%= package[i]['PkgBasePrice'] %></span>
                            <span class="badge bg-warning text-dark fs-6 ms-2">Limited Offer</span>
                        </div>
    
                        <p class="mt-4 text-muted" style="font-size: 0.9rem;">
                            *Prices include flights, hotels, meals, and activities.
                        </p>
    
                        <!-- Book Now Button -->
                        <div class="mt-auto">
                            <a href="/booking?id=<%= package[i]['PackageId'] %>" class="btn btn-primary w-100 mt-3">
                                Book Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    

