<%- include("includes/header.ejs") %>

    <div class="container my-5">
      <div class="booking-form">
        <h2 class="text-center my-4">Travel Booking Form</h2>

        <form action="/submit-booking" method="POST" onsubmit="return bookValidation()">
          <input
            type="hidden"
            name="packageId"
            id="packageNumId"
            value="<%= package.PackageId %>"
          />
          <!-- Package Details Section (Disabled) -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Package Name</label>
              <input
                type="text"
                class="form-control"
                id="packageNameId"
                value="<%= package.PkgName %>"
                disabled
              />
            </div>
            <div class="col-md-6">
              <label class="form-label">Package Price</label>
              <input
                type="text"
                class="form-control"
                id="packagePriceId"
                value="$<%= package.PkgBasePrice %>"
                disabled
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Start Date</label>
              <input
                type="text"
                class="form-control"
                id="packageStartId"
                value="<%= new Date(package.PkgStartDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"
                disabled
              />
            </div>
            <div class="col-md-6">
              <label class="form-label">End Date</label>
              <input
                type="text"
                class="form-control"
                id="packageEndId"
                value="<%= new Date(package.PkgEndDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"
                disabled
              />
            </div>
          </div>
          <div class="row">
            <div>
              <label for="travelerCountId" class="form-label">Number of Travellers</label>
              <input type="number" name="travelerCount" class="form-control" id="travelerCountId">
            </div>
          </div>

          <!-- Customer Information Section -->
          <h5 class="mt-4">Customer Information</h5>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="firstNameId" class="form-label">First Name</label>
              <input
                type="text"
                class="form-control"
                id="firstNameId"
                name="firstName"
              />
            </div>
            <div class="col-md-6">
              <label for="lastNameId" class="form-label">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="lastNameId"
                name="lastName"
              />
            </div>
          </div>

          <div class="mb-3">
            <label for="addressId" class="form-label">Address</label>
            <input
              type="text"
              class="form-control"
              id="addressId"
              name="address"
            />
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="cityId" class="form-label">City</label>
              <input
                type="text"
                class="form-control"
                id="cityId"
                name="city"
              />
            </div>
            <div class="col-md-3">
              <label for="provinceId" class="form-label">Province</label>
              <input
                type="text"
                class="form-control"
                id="provinceId"
                name="province"
              />
            </div>
            <div class="col-md-3">
              <label for="postalCodeId" class="form-label">Postal Code</label>
              <input
                type="text"
                class="form-control"
                id="postalCodeId"
                name="postalCode"
              />
            </div>
            <div class="col-md-3">
              <label for="countryId" class="form-label">Country</label>
              <input
                type="text"
                class="form-control"
                id="countryId"
                name="country"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="homePhoneId" class="form-label">Home Phone</label>
              <input
                type="tel"
                class="form-control"
                id="homePhoneId"
                name="homePhone"
              />
            </div>
            <div class="col-md-6">
              <label for="busPhoneId" class="form-label">Business Phone</label>
              <input
                type="tel"
                class="form-control"
                id="busPhoneId"
                name="busPhone"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-12">
              <label for="emailId" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="emailId"
                name="email"
              />
            </div>
          </div>

          <div class="mb-3">
            <label for="agentId" class="form-label">Agent ID</label>
            <select
              class="form-control"
              id="agentId"
              name="agentId"
            >
              <option value="" disabled selected hidden></option>
              <% agents.forEach(agent => { %>
                <option value="<%= agent.AgentId %>"><%= agent.AgentId + " - " + agent.AgtFirstName + " " + agent.AgtLastName %></option>
              <% }) %>
            </select>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button type="submit" class="btn btn-primary mt-4">
              Submit Booking
            </button>
          </div>
        </form>
      </div>
    </div>

<%- include("includes/footer.ejs") %>