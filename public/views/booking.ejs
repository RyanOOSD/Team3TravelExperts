<%- include("includes/header.ejs") %>

    <div class="container my-5">
      <div class="booking-form">
        <h2 class="text-center my-4">Travel Booking Form</h2>

        <form action="/submit-booking" method="POST" onsubmit="">
          <input
            type="hidden"
            name="packageId"
            value="<%= package.PackageId %>"
          />
          <!-- Package Details Section (Disabled) -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Package Name</label>
              <input
                type="text"
                class="form-control"
                value="<%= package.PkgName %>"
                disabled
              />
            </div>
            <div class="col-md-6">
              <label class="form-label">Package Price</label>
              <input
                type="text"
                class="form-control"
                value="$<%= package.PkgBasePrice %>"
                disabled
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Start Date</label>
              <input
                type="text"
                class="form-control"
                value="<%= new Date(package.PkgStartDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"
                disabled
              />
            </div>
            <div class="col-md-6">
              <label class="form-label">End Date</label>
              <input
                type="text"
                class="form-control"
                value="<%= new Date(package.PkgEndDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>"
                disabled
              />
            </div>
          </div>
          <div class="row">
            <div>
              <label class="form-label">Number of Travellers</label>
              <input type="number" name="travelerCount" class="form-control">
            </div>
          </div>

          <!-- Customer Information Section -->
          <h5 class="mt-4">Customer Information</h5>
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="firstName" class="form-label">First Name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                maxlength="25"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="lastName" class="form-label">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                maxlength="25"
                required
              />
            </div>
          </div>

          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="address"
              maxlength="75"
              required
            />
          </div>

          <div class="row mb-3">
            <div class="col-md-3">
              <label for="city" class="form-label">City</label>
              <input
                type="text"
                class="form-control"
                id="city"
                name="city"
                maxlength="50"
                required
              />
            </div>
            <div class="col-md-3">
              <label for="province" class="form-label">Province</label>
              <input
                type="text"
                class="form-control"
                id="province"
                name="province"
                maxlength="2"
                required
              />
            </div>
            <div class="col-md-3">
              <label for="postalCode" class="form-label">Postal Code</label>
              <input
                type="text"
                class="form-control"
                id="postalCode"
                name="postalCode"
                maxlength="7"
                required
              />
            </div>
            <div class="col-md-3">
              <label for="country" class="form-label">Country</label>
              <input
                type="text"
                class="form-control"
                id="country"
                name="country"
                maxlength="25"
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-6">
              <label for="homePhone" class="form-label">Home Phone</label>
              <input
                type="tel"
                class="form-control"
                id="homePhone"
                name="homePhone"
              />
            </div>
            <div class="col-md-6">
              <label for="busPhone" class="form-label">Business Phone</label>
              <input
                type="tel"
                class="form-control"
                id="busPhone"
                name="busPhone"
                required
              />
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-12">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                maxlength="50"
                required
              />
            </div>
          </div>

          <div class="mb-3">
            <label for="agentId" class="form-label">Agent ID</label>
            <select
              class="form-control"
              id="agentId"
              name="agentId"
            >
              <option value="" disabled selected hidden></option>
              <% agents.forEach(agent => { %>
                <option value="<%= agent.AgentId %>"><%= agent.AgentId + " - " + agent.AgtFirstName + " " + agent.AgtLastName %></option>
              <% }) %>
            </select>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <button type="submit" class="btn btn-primary mt-4">
              Submit Booking
            </button>
          </div>
        </form>
      </div>
    </div>

<%- include("includes/footer.ejs") %>